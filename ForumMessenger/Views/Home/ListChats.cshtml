@model IEnumerable<ForumMessenger.Models.Chat>

@{
    ViewBag.Title = "ListChats";
}

<h2>Ваш логин: <b>@Context.User.Identity.Name</b></h2>
<br />
<h4>Список чатов</h4>
<table class="table table-striped">
    <tr>
        <th>
            От кого
        </th>
        <th>
            Кому
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserSrc.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDst.Login)
            </td>
            <td>
                @Html.ActionLink("Просмотр", "ListMessages", new { id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Удалить", "DeleteChat", new { id = item.Id }, new {onclick="return confirm('Вы уверены, что хотите удалить чат?')", @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

